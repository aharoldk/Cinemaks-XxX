<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.aharoldk.iak_final.DetailMovieFragment">
    <RelativeLayout
        style="@style/matchmatch">

        <ImageView
            android:id="@+id/ivBackground"
            style="@style/matchmatch"
            android:scaleType="fitXY"
            android:src="@drawable/poster" />

        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent">
            <LinearLayout
                style="@style/matchwrap"
                android:orientation="vertical"
                android:weightSum="1">

                <LinearLayout
                    style="@style/matchwrap"
                    android:orientation="vertical"
                    android:padding="20dp">

                    <LinearLayout
                        style="@style/matchwrap"
                        android:gravity="center_horizontal"
                        android:orientation="vertical"
                        android:padding="10dp">

                        <ImageView
                            android:id="@+id/ivPoster"
                            android:layout_width="300dp"
                            android:layout_height="300dp"
                            android:scaleType="fitCenter"
                            android:src="@drawable/poster" />

                        <TextView
                            android:id="@+id/tvTitle"
                            android:layout_width="300dp"
                            android:layout_height="wrap_content"
                            android:layout_marginTop="10dp"
                            android:gravity="center_horizontal"
                            android:text="Annabelle CREATION"
                            android:textColor="@color/textDetail"
                            android:textSize="20sp"
                            android:textStyle="bold" />

                        <RatingBar
                            android:id="@+id/ratingBar"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:numStars="10"
                            android:stepSize="0.5"
                            android:rating="3"
                            android:backgroundTint="@color/colorPrimary"
                            android:progressTint="@color/colorAccent"
                            style="?android:attr/ratingBarStyleSmall"/>

                        <LinearLayout
                            android:layout_width="300dp"
                            android:layout_height="wrap_content">

                            <LinearLayout
                                style="@style/matchwrap"
                                android:gravity="center_horizontal">
                                <ImageView
                                    style="@style/wrapwrap"
                                    android:src="@drawable/ic_date_range_black_24px"/>
                                <TextView
                                    android:id="@+id/tvDate"
                                    style="@style/wrapwrap"
                                    android:text=" Date | "
                                    android:textColor="@color/textDetail" />
                                <ImageView
                                    style="@style/wrapwrap"
                                    android:src="@drawable/ic_language_black_24dp"/>
                                <TextView
                                    android:id="@+id/tvLanguange"
                                    style="@style/wrapwrap"
                                    android:text=" Languange"
                                    android:textColor="@color/textDetail"
                                    android:textAllCaps="true"/>

                            </LinearLayout>
                        </LinearLayout>

                    </LinearLayout>

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#c0c0c0" />

                    <TextView
                        style="@style/matchwrap"
                        android:layout_width="300dp"
                        android:text="SYNOPSIS :"
                        android:textColor="@color/textDetail" />

                    <TextView
                        android:id="@+id/tvOverview"
                        style="@style/matchwrap"
                        android:text="Several years after the tragic death of their little girl, a dollmaker and his wife welcome a nun and several girls from a shuttered orphanage into their home, soon becoming the target of the dollmaker's possessed creation, Annabelle."
                        android:textColor="@color/textDetail" />

                    <View
                        android:layout_width="fill_parent"
                        android:layout_height="2dp"
                        android:layout_marginBottom="10dp"
                        android:layout_marginTop="10dp"
                        android:background="#c0c0c0" />

                </LinearLayout>
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </RelativeLayout>

</FrameLayout>
